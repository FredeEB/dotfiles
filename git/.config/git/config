[commit]
    verbose = true
[diff]
    tool = nvim
[difftool]
    prompt = false
[difftool "nvim"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[rebase]
	autoStash = true
	autoSquash = true
[pull]
	rebase = true
[push]
	autoSetupRemote = true
[alias]
    sync = "! f() { git pull --rebase ${1} ${2}; git submodule update; };f"
