#!/usr/bin/env bash
if [ -z "$NVIM" ]; then
    nvim $@
else
    nvim --server $NVIM --remote-send "<cmd>cd $PWD<cr>"
    if [ $# -eq 0 ]; then
        nvim --server $NVIM --remote-send "<cmd>e ${file:-.}<cr>"
    else
        for file in $@; do
            nvim --server $NVIM --remote-send "<cmd>e ${file}<cr>"
        done
    fi
fi
