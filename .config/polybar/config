[colors]
primary    = ${xrdb:color}
background = ${xrdb:background}
foreground = ${xrdb:foreground}
highlight  = ${xrdb:color1}
grey       = ${xrdb:color4}

[module/dwm]
type = internal/dwm
override-redirect = true

label-title = %title%
label-title-padding = 1
label-title-foreground = $highlight
label-title-maxlen = 30

label-layout = %symbol%
label-layout-padding = 1
label-layout-background = $highlight

; focused = Selected tag on focused monitor
label-focused-background = ${xrdb:background}
label-focused-underline= ${xrdb:color9}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-underline= ${xrdb:color9}
label-unfocused-padding = 1

; visible = Unselected tag, but occupied tag on any monitor
label-visible-underline = ${xrdb:color2}
label-visible-padding = 1

; urgent = Unselected tag with window that has urgency hint set
label-urgent = %name%
label-urgent-background = ${xrdb:color5}
label-urgent-padding = 1

; empty = Unselected and unoccupied tag
; This can be set to an empty string to hide empty tags
label-empty = %name%
label-empty-background = ${xrdb:background}
label-empty-padding = 1

[bar/main]
width = 100%
height = 2%
fixed-center = true

monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = "Victor Mono Nerd Font:size=14;1"
font-1 = "Victor Mono Nerd Font:size=14;1"
font-2 = "Victor Mono Nerd Font:size=14;1"
font-3 = "Victor Mono Nerd Font:size=14;1"

modules-left = dwm
modules-center = date
modules-right = github wlan memory cpu battery

tray-position = right
tray-padding = 2
tray-maxsize = 24

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground}
format-underline = #0189cc
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
label = %gb_used%
format-underline = #50fa7b

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

label-disconnected =

ramp-signal-0 = ðŸŒ§
ramp-signal-1 = ðŸŒ¦
ramp-signal-2 = ðŸŒ¥
ramp-signal-3 = ðŸŒ¤
ramp-signal-4 = ðŸŒ£

